---
import MainLayout from '../layouts/MainLayout.astro';

const seoData = {
  title: "Contato GM TECH | Apple Store São Paulo - SP",
  description: "Fale com a GM TECH. Especialistas em iPhones e acessórios Apple. R. Passo Fundo, 1669, Jardim Coqueiro.",
};

const storeInfo = {
  address: "R. Passo Fundo, 1669, Jardim Coqueiro",
  city: "São Paulo - SP",
  whatsapp: "(11) 94158-3429", 
  instagram: "@gmtech.iphones",
  whatsappUrl: "https://wa.me/5511941583429"
};

// URL de mapa para o endereço R. Passo Fundo, 1669, SP
const mapUrl = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3655.337722394042!2d-46.4674061!3d-23.6289945!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94ce691b0c000001%3A0x7d6b8b0e6e7e7e7e!2sR.%20Passo%20Fundo%2C%201669%20-%20Jardim%20Coqueiro%2C%20S%C3%A3o%20Paulo%20-%20SP!5e0!3m2!1spt-BR!2sbr!4v1700000000000";

const structuredData = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "MobilePhoneStore",
  "name": "GM TECH",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "R. Passo Fundo, 1669",
    "addressLocality": "São Paulo",
    "addressRegion": "SP",
    "postalCode": "08000-000",
    "addressCountry": "BR"
  },
  "telephone": "+5511941583429"
});
---

<MainLayout title={seoData.title} description={seoData.description}>
  <script type="application/ld+json" set:html={structuredData} />

  <main class="flex-grow pt-32 pb-12 px-6 flex flex-col items-center bg-[radial-gradient(circle_at_top,_#111_0%,_#000_100%)]">
    <div class="text-center mb-12">
      <h1 class="text-3xl md:text-5xl font-bold text-[#FFB800]">
        Fale com a <span class="text-white">GM TECH</span>
      </h1>
    </div>

    <div class="w-full max-w-5xl bg-[#111111] border-2 border-[#FFB800] rounded-[2.5rem] overflow-hidden shadow-[0_0_30px_rgba(255,184,0,0.1)]">
      <div class="grid grid-cols-1 md:grid-cols-2">
        <div class="p-10 md:p-14 space-y-12">
          <header class="space-y-2">
            <h2 class="text-2xl font-bold text-white">Canais de Atendimento</h2>
            <p class="text-gray-400 text-sm">Tire suas dúvidas e garanta seu produto.</p>
          </header>

          <div class="space-y-12">
            <section class="flex items-center gap-8"> 
              <div class="text-[#25D366]">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 256 256"><path d="M187.58,144.84l-32-16a8,8,0,0,0-8,1.05l-16.8,13.44a64.32,64.32,0,0,1-33.11-33.11l13.44-16.8a8,8,0,0,0,1.05-8l-16-32a8,8,0,0,0-9-4.69l-48,12a8,8,0,0,0-6,7.77C31.39,154.06,101.94,224.61,189.28,222.86a8,8,0,0,0,7.77-6l12-48A8,8,0,0,0,187.58,144.84Z"></path></svg>
              </div>
              <div class="flex flex-col">
                <h3 class="font-bold text-white text-lg leading-none">WhatsApp</h3>
                <p class="text-gray-400 mt-2">{storeInfo.whatsapp}</p>
                <a href={storeInfo.whatsappUrl} target="_blank" rel="noopener noreferrer" class="text-[#FFB800] text-sm font-bold hover:underline mt-1">Iniciar conversa</a>
              </div>
            </section>

            <section class="flex items-center gap-8">
              <div class="text-pink-500">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 256 256"><path d="M128,80a48,48,0,1,0,48,48A48.05,48.05,0,0,0,128,80Zm0,80a32,32,0,1,1,32-32A32.03,32.03,0,0,1,128,160ZM176,24H80A56.06,56.06,0,0,0,24,80v96a56.06,56.06,0,0,0,56,56h96a56.06,56.06,0,0,0,56-56V80A56.06,56.06,0,0,0,176,24Zm40,152a40,40,0,0,1-40,40H80a40,40,0,0,1-40-40V80A40,40,0,0,1,80,40h96a40,40,0,0,1,40,40ZM192,76a12,12,0,1,1-12-12A12,12,0,0,1,192,76Z"></path></svg>
              </div>
              <div class="flex flex-col">
                <h3 class="font-bold text-white text-lg leading-none">Instagram</h3>
                <p class="text-gray-400 mt-2">{storeInfo.instagram}</p>
                <a href={`https://instagram.com/${storeInfo.instagram.replace('@', '')}`} target="_blank" class="text-[#FFB800] text-sm font-bold hover:underline mt-1">Siga-nos</a>
              </div>
            </section>

            <section class="flex items-center gap-8">
              <div class="text-[#FFB800]">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 256 256"><path d="M128,64a40,40,0,1,0,40,40A40,40,0,0,0,128,64Zm0,64a24,24,0,1,1,24-24A24,24,0,0,1,128,128Zm0-112a88.1,88.1,0,0,0-88,88c0,31.4,14.51,64.68,42,96.25a254.19,254.19,0,0,0,41.45,38.3,8,8,0,0,0,9.1,0A254.19,254.19,0,0,0,182,216.25c27.5-31.57,42-64.85,42-96.25A88.1,88.1,0,0,0,128,16Zm0,224a248.29,248.29,0,0,1-34.7-31.78C67.08,177.94,56,147.09,56,120a72,72,0,0,1,144,0c0,27.09-11.08,57.94-37.3,88.22A248.29,248.29,0,0,1,128,240Z"></path></svg>
              </div>
              <address class="flex flex-col not-italic">
                <h3 class="font-bold text-white text-lg leading-none">Nossa Loja</h3>
                <p class="text-gray-400 mt-2 text-sm leading-relaxed">
                  {storeInfo.address}<br/>
                  {storeInfo.city}
                </p>
              </address>
            </section>
          </div>
        </div>

        <div class="p-6 md:p-10 h-full w-full min-h-[450px]">
          <iframe 
            src={mapUrl}
            title="Localização da GM TECH"
            width="100%" 
            height="100%" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy"
            class="grayscale opacity-80 rounded-3xl"
          ></iframe>
        </div>
      </div>
    </div>
  </main>
</MainLayout>